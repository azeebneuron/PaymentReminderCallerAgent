# ==============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# ==============================================================================

# Vapi Configuration (REQUIRED)
# Get these from https://vapi.ai/dashboard
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id_here
VAPI_WEBHOOK_SECRET=

# Gemini AI Configuration (REQUIRED)
# Get API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Configuration (OPTIONAL - used for alternative response parsing)
OPENAI_API_KEY=

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/payment_caller
# For development, SQLite is used by default (no configuration needed)
DATABASE_URL=sqlite:///./payment_caller.db

# ==============================================================================
# GOOGLE SHEETS CONFIGURATION (REQUIRED)
# ==============================================================================
# Path to your Google service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json

# Default Google Sheet ID (can be overridden per client in database)
# Find this in your sheet URL: docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# ==============================================================================
# API & WEBHOOK CONFIGURATION
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# Your public domain for webhooks (REQUIRED for production)
# For local development with ngrok: https://abc123.ngrok.io
API_BASE_URL=https://your-domain.com
WEBHOOK_URL=https://your-domain.com/vapi/webhook

# ==============================================================================
# SCHEDULER CONFIGURATION
# ==============================================================================
# Time to run automated daily calls (24-hour format)
DAILY_RUN_TIME=09:00
TIMEZONE=Asia/Kolkata

# ==============================================================================
# CALL CONFIGURATION
# ==============================================================================
# Maximum call duration in seconds
MAX_CALL_DURATION_SECONDS=300

# Number of retry attempts for failed calls
CALL_RETRY_ATTEMPTS=2

# Maximum calls per minute (rate limiting)
CALL_RATE_LIMIT_PER_MINUTE=10

# Business hours for making calls (24-hour format)
BUSINESS_HOURS_START=10:00
BUSINESS_HOURS_END=19:00

# ==============================================================================
# DASHBOARD CONFIGURATION
# ==============================================================================
DASHBOARD_PORT=8501
DASHBOARD_TITLE=Payment Caller Dashboard

# ==============================================================================
# LOGGING & ENVIRONMENT
# ==============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Environment: development, production
ENVIRONMENT=development